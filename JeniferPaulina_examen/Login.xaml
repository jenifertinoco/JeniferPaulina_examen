<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JeniferPaulina_examen.MainPage">


    <StackLayout>

        <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"></Image>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="CURSOS ONLINE" HorizontalTextAlignment="Center" TextColor="White" FontSize="30"/>
        </Frame>



        <Entry x:Name="txtUser" Placeholder="Ingrese el Usuario"/>
        <Entry x:Name="txtPass" Placeholder="Ingrese la Clave" IsPassword="True"/>

        <Button x:Name="btnAbrir" Text="LOGIN" Clicked="btnAbrir_Clicked"/>

      
    </StackLayout>

</ContentPage>
